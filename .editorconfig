root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
max_line_length = 100

[*.asm]
indent_style = tab
indent_size = 8

[*.{c,h,cpp,hpp}]
indent_size = 4
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab

[*.json]
indent_size = 2
indent_style = space
