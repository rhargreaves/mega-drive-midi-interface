{
    "name": "MDMI",
    "build": {
        "context": "..",
        "dockerfile": "../Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "EditorConfig.EditorConfig"
            ]
        }
    },
    "postCreateCommand": {
        "editorconfig": "apt -y install npm nodejs && npm install -g editorconfig"
    }
}
